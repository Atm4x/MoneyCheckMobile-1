<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyCheck.Controls.DebtControl"
       BorderColor="Transparent" 
       VerticalOptions="Center" 
       HasShadow="False" 
       Background="Transparent" 
       Padding="0" >
    <StackLayout>
        <Label TextColor="Green" FontSize="18" Text="{Binding Path=Amount, StringFormat='{}{0:f} руб.'}"/>
        <Label TextColor="Red" FontSize="18" Text="{Binding Path=Description}"/>
        <Label FontSize="2"/>
    </StackLayout>
</Frame>